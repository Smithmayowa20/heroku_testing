option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "heroku_testing.settings"
    PYTHONPATH: "$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "heroku_testing/wsgi.py"
    StaticFiles: "/static/=www/static/"
packages:
  yum:
    git: []
    postgresql95: []
    postgresql95-devel: []
    libjpeg-turbo-devel: []
    libpng-devel: []
container_commands:
  01_migrate:
    command: "python manage.py migrate"
    leader_only: true
  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python iotd/manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "python manage.py collectstatic --noinput"
  04_addPostgreSQLPacket:
    command: 'yum install postgresql95-devel'
    leader_only: true